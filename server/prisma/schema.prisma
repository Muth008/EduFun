generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Module {
  id          String       @id @default(cuid()) @map("_id")
  name        String       @unique
  description String?
  image       String?
  active      Boolean      @default(false)
  tasks       ModuleTask[]
}

model Task {
  id          String       @id @default(cuid()) @map("_id")
  name        String       @unique
  description String?
  modules     ModuleTask[]
}

model ModuleTask {
  id          String       @id @default(cuid()) @map("_id")
  moduleId    String
  taskId      String
  order       Int
  Module      Module       @relation(fields: [moduleId], references: [id])
  Task        Task         @relation(fields: [taskId], references: [id])
}

model TaskItem {
  id            String   @id @default(cuid()) @map("_id")
  name          String   @unique
  taskId        String   @map("_task")
  type          String
  content       String
  contentType   String
  order         Int
}

model Scoreboard {
  id              String   @id @default(cuid()) @map("_id")
  moduleId        String   @map("_module")
  taskId          String?  @map("_task")
  hint            Int      @default(0)
  solution        Int      @default(0)
  startDateTime   DateTime? 
  endDateTime     DateTime?
}

model Review {
  id            String   @id @default(cuid()) @map("_id")
  moduleId      String   @map("_module")
  rating        Int
  comment       String?
}